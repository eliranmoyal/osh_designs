<h1><%= @user.name %></h1>
<h3>My Contact Info</h3>
<div class="row">
	<div class="span2">
		<label >Email</label>
	</div>
	<div class="span1">
		<p><%= @user.email %></p>
	</div>
</div>
<div class="row">
	<div class="span2">
		<label >Phone</label>
	</div>
	<div class="span1">
		<p><%= @user.phone %></p>
	</div>
</div>
<br>
<div class="row">
	<% if @orders.any? %>
	<div class ="span5">
		<h3>My Orders</h3>
		<ol class="orders">
			<%= render @orders %>
		</ol>
	</div>
	<% end %>
</div>