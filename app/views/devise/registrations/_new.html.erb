<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div><%= f.text_field :name, :autofocus => true , :placeholder => "Your Name"%></div>

<div> <%= f.email_field :email, :placeholder => "Your Email" %></div>

<div><%= f.password_field :password ,  :placeholder => "Create Your Password"%></div>

<div><%= f.password_field :password_confirmation , :placeholder => "Put Your Password Again"%></div>

<div><%= f.submit "Sign Up " , :class => 'btn btn-large btn-block btn-primary' %></div>

<% end %>

